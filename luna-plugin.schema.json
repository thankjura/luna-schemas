{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Luna plugin",
  "description": "Luna plugin descriptor",
  "type": "object",

  "$defs": {
    "Resource": {
      "type": "object",
      "properties": {
        "key":       { "type": "string", "description": "Resources key: baseName for i18n, componentName for component" },
        "name":      { "type": "string", "description": "Resources name" },
        "type":      { "type": "string", "description": "Resource type", "enum": ["i18n", "comp", "css", "any"] },
        "path":      { "type": "string", "description": "Relative path from resource folder", "format": "uri-reference" }
      },
      "required": ["key", "type", "path"],
      "additionalProperties": false
    },

    "ResourcesList": {
      "type": "array",
      "items": { "$ref": "#/$defs/Resource" },
      "minItems": 0
    }
  },


  "properties": {
    "key": {
      "description": "The unique key of plugin",
      "type": "string"
    },
    "name": {
      "description": "The name of plugin",
      "type": "string"
    },
    "description": {
      "description": "The description of plugin",
      "type": "string"
    },
    "version": {
      "description": "The version of plugin",
      "type": "string"
    },
    "vendor": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Vendor name",
          "type": "string"
        },
        "url": {
          "description": "Vendor url",
          "type": "string"
        }
      },
      "required": ["name", "url"]
    },
    "scanPackages": {
      "description": "Collection of package names for scan",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "resources": {
      "$ref": "#/$defs/ResourcesList"
    },
    "components": {
      "description": "Collection of defined components",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "description": "Component key",
            "type": "string"
          },
          "name": {
            "description": "Component name",
            "type": "string"
          },
          "className": {
            "description": "Component class",
            "type": "string"
          },
          "resources": {
            "$ref": "#/$defs/ResourcesList"
          }
        },
        "required": ["key", "className", "name"]
      }
    }
  },
  "required": ["key", "name", "version", "vendor"]
}